{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "types": ["bun-types"],
    "allowSyntheticDefaultImports": true,
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
